	"isset_ternary": {
		"prefix":"isset_ternary", 
		"body": ["isset(${1: index}) ? ${1: index} : '';"], 
		"description": "creates an isset ternary for returning blank strings if nothing is set used commonly in mfcs migration"
	}
}